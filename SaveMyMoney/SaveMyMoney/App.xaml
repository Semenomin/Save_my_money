<Application x:Class="SaveMyMoney.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SaveMyMoney"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resorses/Dictionary_rus.xaml" />
                <ResourceDictionary Source="Resorses/Dictionary_eng.xaml" />
                 </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="MainBlue" Color="#FF1F4B55"/>
            <SolidColorBrush x:Key="SecondBlue" Color="#FF32706A"/>
            <FontFamily x:Key="MainFont">Garamond</FontFamily>
            <DropShadowEffect x:Key="Shadow_Leave" x:Name="Drop_shadow_Text_box_login" Opacity="0.5" BlurRadius="6"/>
            <DropShadowEffect x:Key="Shadow_Enter" x:Name="Drop_shadow_Text_box_login1" Opacity="0" BlurRadius="6"/>
        </ResourceDictionary>
       
    </Application.Resources>
</Application>
