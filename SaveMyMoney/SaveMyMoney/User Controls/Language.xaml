<UserControl x:Name="Language_button" x:Class="SaveMyMoney.Language"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveMyMoney"
             mc:Ignorable="d" Width="97" MouseEnter="Language_button_MouseEnter" MouseLeave="Language_button_MouseLeave" Height="70">
    <UserControl.Effect>
        <DropShadowEffect x:Name="Language_button_shadow" Opacity="0.5" BlurRadius="10"/>
    </UserControl.Effect>
    <Grid Margin="0">
        <Rectangle x:Name="Ret_1" Fill="{DynamicResource SecondBlue}" Margin="0,0,0,52"/>
        <Rectangle x:Name="Ret_2" Fill="{DynamicResource SecondBlue}" Height="23" VerticalAlignment="Top" Margin="0,23,0,0"/>
        <Rectangle x:Name="Ret_3" Fill="{DynamicResource SecondBlue}" Height="19" Margin="0,51,0,0"/>
        <Label x:Name="Label1" Content="{DynamicResource Language}" Margin="0,18,0,19" Height="33" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="{DynamicResource MainBlue}"/>
    </Grid>
</UserControl>
